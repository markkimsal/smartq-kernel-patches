+		p = (volatile unsigned int *)SRAM_ADDR_STANDBY;
+
+		for (i = 0; i < SRAM_FUNC_SIZE; i++) {
+			*(p++) = *(fPtr++);
+		}
+
+		while (--i)
+			;
+
+		suspend_mode_on();
+	}
