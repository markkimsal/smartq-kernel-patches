+	pUART->LCR      &= ~Hw7;    //HwUART0_LCR_DLAB_OFF; //HwUART1_LCR_DLAB_OFF;
+	pUART->REG2.IER = 0;
+	pUART->LCR      |= Hw7; //HwUART0_LCR_DLAB_ON;
+	pUART->REG3.FCR = Hw5|Hw4|Hw2|Hw1|Hw0; //HwUART0_FCR_TXFR_EN | HwUART0_FCR_RXFR_EN | HwUART0_FCR_FE_EN;
